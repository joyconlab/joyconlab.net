---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar';
import Cursor from '../components/Cursor';
import PageLoader from '../components/PageLoader';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: 'en' | 'ro';
  translations: any;
}

const { 
  title, 
  description = "Professional Nintendo Switch modding services in Bucharest.",
  lang = 'en',
  translations
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="keywords" content="Nintendo Switch modding, HWFLY, PicoFly, Joy-Con repair, Switch OLED, console modding Bucharest" />
  <meta name="author" content="Joy-Con Lab" />
  <meta name="robots" content="index, follow" />
  
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://joyconlab.net" />
  
  <link rel="canonical" href={`https://joyconlab.net${currentPath}`} />
  <link rel="alternate" hreflang="en" href="https://joyconlab.net/" />
  <link rel="alternate" hreflang="ro" href="https://joyconlab.net/ro/" />
  <link rel="icon" type="image/png" href="/favicon.png" />
  
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
  
  <title>{title}</title>
  
  <ViewTransitions />
  
  <script is:inline>
    (function() {
      const theme = localStorage.getItem('theme');
      if (theme === 'light' || theme === 'dark') {
        document.documentElement.setAttribute('data-theme', theme);
      } else if (window.matchMedia('(prefers-color-scheme: light)').matches) {
        document.documentElement.setAttribute('data-theme', 'light');
      } else {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
    })();
  </script>
  
  <style is:inline>
    html:not([data-theme]) {
      visibility: hidden;
    }
    html[data-theme] {
      visibility: visible;
    }
  </style>
</head>
<body>
  <Cursor client:load />
  <PageLoader client:load transition:persist />
  <Navbar 
    currentPath={currentPath} 
    lang={lang} 
    translations={translations.nav}
    client:load
    transition:persist
  />
  
  <main transition:animate="fade">
    <slot />
  </main>
  
  <Footer 
    lang={lang} 
    translations={translations.footer}
    navTranslations={translations.nav}
  />
  
  <script>
    document.addEventListener('astro:page-load', () => {
      const theme = localStorage.getItem('theme');
      if (theme) {
        document.documentElement.setAttribute('data-theme', theme);
      }
    });
  </script>
</body>
</html>
